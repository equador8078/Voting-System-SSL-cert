<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>
    <style>
        /* Add spacing between progress bars */
        .progress-container {
            margin-bottom: 20px; /* Adjust the bottom margin as needed */
        }

        .progress-bar-container {
            margin-bottom: 10px; /* Space between each progress bar */
        }

        /* Optionally, center the names with the bars */
        .name {
            text-align: center;
            margin-bottom: 5px; /* Space between name and progress bar */
        }
    </style>
</head>

<body>
    <%- include('./nav.ejs') %>
    <br>
    <h1>Voting results:</h1>
    <!-- Dynamic Progress Bars with Names -->
    <div class="progress-container">
        <div class="name">Ayush</div>
        <div class="progress progress-bar-container" role="progressbar" aria-label="Progress Ayush" aria-valuenow="<%= progressValues[0] %>" aria-valuemin="0" aria-valuemax="100">
            <div class="progress-bar" style="width: <%= progressValues[0] %>%"></div>
        </div>
    </div>

    <div class="progress-container">
        <div class="name">Nishant</div>
        <div class="progress progress-bar-container" role="progressbar" aria-label="Progress Nishant" aria-valuenow="<%= progressValues[1] %>" aria-valuemin="0" aria-valuemax="100">
            <div class="progress-bar" style="width: <%= progressValues[1] %>%"></div>
        </div>
    </div>

    <div class="progress-container">
        <div class="name">Yash</div>
        <div class="progress progress-bar-container" role="progressbar" aria-label="Progress Yash" aria-valuenow="<%= progressValues[2] %>" aria-valuemin="0" aria-valuemax="100">
            <div class="progress-bar" style="width: <%= progressValues[2] %>%"></div>
        </div>
    </div>

    <div class="progress-container">
        <div class="name">Rajpal</div>
        <div class="progress progress-bar-container" role="progressbar" aria-label="Progress Rajpal" aria-valuenow="<%= progressValues[3] %>" aria-valuemin="0" aria-valuemax="100">
            <div class="progress-bar" style="width: <%= progressValues[3] %>%"></div>
        </div>
    </div>
    <a class="btn btn-primary" href="/admin" role="button">Clear all results</a>

    <%- include('./partials/head') %>
</body>

</html>
